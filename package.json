{
  "name": "work-tracker",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "webpack serve --config webpack.config.js --env development",
    "dev:main": "webpack --config webpack.config.js --watch --env development",
    "build": "webpack --config webpack.config.js --env production",
    "build:main": "webpack --config webpack.config.js --env production --entry ./src/main/index.ts",
    "build:renderer": "webpack --config webpack.config.js --env production --entry ./src/renderer/index.tsx",
    "electron": "electron .",
    "electron:dev": "npm run build && electron .",
    "start": "npm run build && NODE_ENV=production electron . --prod",
    "clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "work-tracker",
    "screenshot"
  ],
  "author": "Work Tracker Team",
  "license": "MIT",
  "description": "업무 자동화 서비스 - 자동 스크린샷 캡처 및 업무 기록 관리",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "electron": "^37.2.0",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.0",
    "postcss-loader": "^8.1.0",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.525.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.8.0",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  }
}
